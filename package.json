{
  "name": "indexed",
  "version": "0.5.1",
  "description": "High-level wrapper around IndexedDB with fallback to localStorage",
  "main": "indexed.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:ask11/indexed.git"
  },
  "keywords": [
    "IndexedDB",
    "LevelDB",
    "browserify"
  ],
  "author": "Aleksey Kulikov <alekseys.kulikov@gmail.com> (http://twitter.com/ask_11)",
  "license": "MIT",
  "scripts": {
    "postinstall": "command -v component > /dev/null && ./script/post-install",
    "test": "testem -f test/testem.json ci",
    "start": "testem -f test/testem.json",
    "build": "component build --out tmp",
    "release": "./script/release",
    "stat": "cloc lib/ --quiet --exclude-dir=abstract --by-file && cloc test/*.js --quiet --by-file"
  },
  "devDependencies": {
    "abstract-leveldown": "0.7.3",
    "component": "*",
    "testem": "*",
    "chai": "*",
    "async": "*",
    "tape": "*",
    "browserify": "*"
  },
  "testling": {
    "preprocess": "./script/post-install",
    "html": "test/test-runner.html",
    "browsers": [
      "ie/6..latest",
      "firefox/3..5",
      "firefox/19..nightly",
      "chrome/4..7",
      "chrome/25..canary",
      "opera/10..next",
      "safari/4..latest",
      "iphone/6",
      "ipad/6",
      "android/4.2"
    ]
  }
}
