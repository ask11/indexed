{
  "name": "indexed",
  "version": "0.6.0",
  "description": "Modular storage on top of IndexedDB with fallback to localStorage",
  "main": "dist/indexed.js",
  "repository": "git@github.com:ask11/indexed.git",
  "author": "Aleksey Kulikov <alekseys.kulikov@gmail.com> (http://twitter.com/ask_11)",
  "license": "MIT",
  "keywords": [
    "indexed",
    "IndexedDB",
    "LevelDB",
    "localStorage",
    "component",
    "browserify"
  ],
  "scripts": {
    "test": "component-test",
    "start": "component-test --server",
    "build": "component build --dev",
    "release": "component build -s Indexed && sed -i.bak 's/require/requireIndexed/g' build/build.js && cp ./build/build.js ./dist/indexed.js",
    "stat": "cloc lib/ --quiet --by-file && cloc test/*.js --quiet --by-file"
  },
  "devDependencies": {
    "component": "*",
    "component-test": "*"
  },
  "testling": {
    "preprocess": "npm run build",
    "html": "test/test-runner.html",
    "browsers": [
      "ie/9..latest",
      "firefox/25..nightly",
      "chrome/30..canary",
      "opera/10..latest",
      "safari/4..latest"
    ]
  }
}
